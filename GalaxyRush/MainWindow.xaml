<Window
    x:Class="GalaxyRush.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalaxyRush"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Jeu"
    Width="806"
    Height="450"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid >
        <Canvas
        Name="myCanvas"
        Background="LightBlue"
        Focusable="True"
        KeyDown="Canvas_KeyDown"
        KeyUp="Canvas_KeyUp">
            <Rectangle
            Name="background"
            Width="1262"
            Height="400"
            Fill="Orange" />
            <Rectangle
            Name="background2"
            Canvas.Left="1262"
            Width="1262"
            Height="400"
            Fill="LightGreen" />
            <Rectangle
            Name="ground"
            Canvas.Left="0"
            Canvas.Top="387"
            Width="800"
            Height="32"
            Fill="Black" />
            <Rectangle
            Name="player"
            Canvas.Left="110"
            Canvas.Top="151"
            Width="67"
            Height="99"
            Fill="Brown" />
            <Rectangle
            Name="obstacle"
            Canvas.Left="721"
            Canvas.Top="320"
            Width="55"
            Height="80"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="Red" />
            <Label
            Name="scoreText"
            Content="Score: 0"
            FontSize="22"
            FontWeight="Bold" />
        </Canvas>
    </Grid>
    
</Window>
