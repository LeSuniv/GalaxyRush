<Window
    x:Class="GalaxyRush.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalaxyRush"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Jeu"
    Width="806"
    Height="450"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Canvas
            Name="myCanvas"
            Background="LightBlue"
            Focusable="True"
            KeyDown="CleeCanvasAppuyee"
            KeyUp="CleeCanvasRelachee">
            <Rectangle
                Name="background"
                Width="1262"
                Height="435"
                Fill="Orange" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Rectangle
                Name="background2"
                Canvas.Left="1262"
                Width="1262"
                Height="435"
                Fill="LightGreen" />
            <Rectangle
                Name="joueur"
                Canvas.Left="110"
                Canvas.Top="151"
                Width="67"
                Height="99"
                Fill="Brown" RenderTransformOrigin="0.5,0.5" >
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90.52"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle
                Name="obstacle"
                Canvas.Left="721"
                Canvas.Top="320"
                Width="55"
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="Red" />
            <Label
                Name="scoreText"
                Content="Score: 0"
                FontSize="22"
                FontWeight="Bold" Foreground="White" FontFamily="72 Black"/>
        </Canvas>
        <Grid>
            <TextBlock x:Name="time" HorizontalAlignment="Left" Margin="736,10,0,0" Text="0:00" VerticalAlignment="Top" Height="22" Width="60" FontSize="22" FontWeight="Bold" FontFamily="72 Black" Foreground="White"/>
            <TextBlock HorizontalAlignment="Left" Margin="650,10,0,0" Text="Temps: " VerticalAlignment="Top" Height="22" Width="82" FontSize="22" FontWeight="Bold" FontFamily="72 Black" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
