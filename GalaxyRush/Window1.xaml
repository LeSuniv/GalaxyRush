<Window
    SizeToContent="WidthAndHeight"
    x:Class="GalaxyRush.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalaxyRush"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" Icon="/fusée.png" ResizeMode="NoResize">

    <Grid>

        <Rectangle x:Name="Fond" HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="800"/>
        <Rectangle x:Name="FondLogo" HorizontalAlignment="Center" Height="240" VerticalAlignment="Top" Width="270"/>

        <Button
            x:Name="ButJouer"
            Margin="0,245,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#00000000"
            BorderBrush="#00000000"
            BorderThickness="1,1,1,1"
            Click="ButJouer_Click"
            Content="Jouer"
            FontSize="48"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="ButQuitter"
            Margin="0,318,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#00DDDDDD"
            BorderBrush="#00707070"
            Click="ButQuitter_Click"
            Content="Quitter"
            FontSize="48"
            FontWeight="Bold"
            Foreground="White" />
    </Grid>

</Window>