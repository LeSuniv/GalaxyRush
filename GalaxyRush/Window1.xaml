<Window
    x:Class="GalaxyRush.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalaxyRush"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="\Images\LogoGalaxyRushR.png&gt;" />
    </Window.Background>
    <Grid>
        <Image Source="/Images/fond_espace.jpg" Stretch="Fill" />
        <Button
            x:Name="ButJouer"
            Margin="127,271,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00DDDDDD"
            BorderBrush="#00707070"
            BorderThickness="1,1,1,1"
            Click="ButJouer_Click"
            Content="Jouer"
            FontSize="48"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="ButQuitter"
            Margin="540,271,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#00DDDDDD"
            BorderBrush="#00707070"
            Click="ButQuitter_Click"
            Content="Quitter"
            FontSize="48"
            FontWeight="Bold"
            Foreground="White" />
        <Label
            x:Name="TitreJeuMenu"
            Width="492"
            Height="94"
            Margin="0,92,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Galaxy Rush"
            FontFamily="Cascadia Code"
            FontSize="72"
            FontWeight="ExtraBold"
            Foreground="White" />
        <Image
            Width="338"
            Height="262"
            Margin="0,139,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/Images/LogoGalaxyRushR.png"
            Stretch="Fill" />
    </Grid>
</Window>
