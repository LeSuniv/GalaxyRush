<Window
    SizeToContent="WidthAndHeight"
    x:Class="GalaxyRush.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalaxyRush"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" Icon="/fusée.png" ResizeMode="NoResize">

    <Grid>

        <Rectangle x:Name="Fond" HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="800"/>
        <Rectangle x:Name="FondLogo" HorizontalAlignment="Center" Height="240" VerticalAlignment="Top" Width="270"/>

        <Button
            x:Name="ButJouer"
            Margin="0,245,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#00000000"
            BorderBrush="#00000000"
            BorderThickness="1,1,1,1"
            Click="ButJouer_Click"
            Content="Jouer"
            FontSize="48"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="ButQuitter"
            Margin="0,318,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#00DDDDDD"
            BorderBrush="#00707070"
            Click="ButQuitter_Click"
            Content="Quitter"
            FontSize="48"
            FontWeight="Bold"
            Foreground="White" />

        <Rectangle Fill="#FF31AAEA" HorizontalAlignment="Left" Height="156" Margin="500,157,0,0" Stroke="White" VerticalAlignment="Top" Width="257"/>
        <TextBlock HorizontalAlignment="Left" Height="34" Margin="559,157,0,0" TextWrapping="Wrap" Text="Comment jouer" TextAlignment="Center" VerticalAlignment="Top" Width="149" Foreground="#FFFFFF" FontWeight="Bold" FontSize="22"/>
        <TextBlock Height="73" Margin="559,238,0,0" TextWrapping="Wrap" TextAlignment="Justify" VerticalAlignment="Top" Foreground="#FFFFFF" FontSize="16" HorizontalAlignment="Left" Width="149"><Run Text="Changer de direction&#x9;- Espace&#xA;Pause&#x9;- P"/><LineBreak/><Run Text="ESC&#x9;- Quitter la partie"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="506,191,0,0" TextWrapping="Wrap" Text="Esquiver les ennemis et les obstacles sur votre chemin! Sinon la partie est terminée" TextAlignment="Center" VerticalAlignment="Top" Height="37" Width="244" Foreground="White"/>

    </Grid>
</Window>